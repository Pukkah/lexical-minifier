{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "testMatch": ["<rootDir>/tests/**/*.test.ts"],
  "collectCoverageFrom": [
    "<rootDir>/src/**",
    "!<rootDir>/src/index.ts",
    "!<rootDir>/src/types.ts",
    "!<rootDir>/src/built-in-minifiers.ts",
    "!<rootDir>/src/lookups/lookup-data.ts",
    "!<rootDir>/src/minifiers/no-minifier.ts",
    "!<rootDir>/src/**.d.ts"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  },
  "globals": {
    "__DEV__": true
  }
}
